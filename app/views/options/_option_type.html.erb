<%# 対象カラムのデータ型がstringまたはtextの場合のみ表示 %>
<% if contents[:format] && option_type.type == 'format' && ['string', 'text'].include?(@column.data_type.type) %>
  <% if option_type.id == 11 %>
    <p>正規表現に関する制限(:format)</p>
    <% contents[:option_count] += 1 %>
  <% end %>
  <div>
    <%= f.radio_button :option_type_id, option_type.id %><%== option_type.info %><br>
    サンプル: <%== option_type.code %>
  </div>
  <br>
<% end %>

