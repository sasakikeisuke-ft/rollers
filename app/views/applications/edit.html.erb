<h1>アプリケーション更新</h1>

<%= form_with model: @application, local: true do |f| %>
  <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description, autofocus: true %>
  </div>
  
  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>